{
  "name": "fp-money",
  "version": "2.0.3",
  "private": false,
  "description": "Input formatter and currency selector",
  "repository": {
    "type": "git",
    "url": "github.com/fluidpay/fp-money"
  },
  "license": "MIT",
  "type": "module",
  "main": "./dist/fp-money.umd.js",
  "module": "./dist/fp-money.es.js",
  "browser": "./dist/fp-money.umd.js",
  "unpkg": "./dist/fp-money.umd.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/fp-money.es.js",
      "require": "./dist/fp-money.umd.js"
    },
    "./style.css": "./dist/style.css",
    "./vue": {
      "types": "./dist/vue/index.d.ts",
      "import": "./dist/vue/index.js",
      "require": "./dist/vue/index.umd.cjs"
    },
    "./vue/style.css": "./dist/vue/style.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite --config=vite.config.docs.mts",
    "format": "prettier --write --cache --parser typescript \"src/**/*.ts\"",
    "build": "npm run build:clean && npm run build:lib && npm run build:vue && npm run build:types && npm run build:docs",
    "build:clean": "rm -rf ./dist ./docs",
    "build:lib": "vite build --config=vite.config.lib.mts",
    "build:vue": "vite build --config=vite.config.vue.mts",
    "build:types": "vue-tsc --declaration --emitDeclarationOnly -p tsconfig.build.json",
    "build:docs": "vite build --config=vite.config.docs.mts",
    "test": "vitest run",
    "testui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "vitestwatch": "vitest watch",
    "type-check": "vue-tsc --noEmit -p tsconfig.json",
    "release": "node release.js",
    "deploy:next": "npm run build && npm version prerelease --no-git-tag-version --preid=next && npm publish"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/ui": "^3.2.4",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.18.0",
    "eslint-plugin-prettier": "^5.2.2",
    "eslint-plugin-vue": "^9.32.0",
    "gofakeit": "^2.4.1",
    "jsdom": "^27.0.0",
    "sass": "^1.93.2",
    "shiki": "^1.29.1",
    "typescript": "^5.9.3",
    "vue": "^3.5.22",
    "vue-router": "^4.6.3",
    "vue-tsc": "^3.1.1"
  }
}
