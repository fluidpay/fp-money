{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "declaration": true,
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "allowJs": false,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "lib": ["esnext", "dom"],
    "paths": {
      "fp-money": ["src/fp-money"]
    }
  },
  "include": ["dist/", "src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue"]
}
