{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": true,
    // "noEmit": true,

    "outDir": "dist",
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "fp-money": ["src/fp-money"]
    },

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": ["src/docs", "src/**/*.spec.ts", "src/**/*.test.ts", "src/**/rollup.config.ts", "src/**/vite.config.ts"],
  "include": ["src/fp-money/**/*.ts", "src/fp-money/**/*.d.ts", "src/fp-money/*.vue"]
}
